---
import { Image } from "astro:assets"
import Button from "./Button.astro"
import type { BaseInterface } from "../common/base.interface"

type Page = {
  name: string
  slug: string
}

const pages: Page[] = [
  {
    name: "Projetos",
    slug: "#projetos",
  },
  {
    name: "Depoimentos",
    slug: "#depoimentos",
  },
  {
    name: "Quem Somos",
    slug: "#sobre",
  },
]

const { variant } = Astro.props

interface Props extends BaseInterface {}
---

<nav class="flex justify-center items-center">
  {
    [
      variant?.includes("mobile") && (
        <div class="bg-slate-50 flex w-full justify-around fixed bottom-0 md:hidden px-6 py-4 rounded-t-2xl z-20">
          {pages.map((page) => (
            <div class="flex flex-col items-center">
              <a
                class="flex flex-col items-center"
                data-nav
                href={page.slug}
                class:list={""}
              >
                {page.name}
              </a>
            </div>
          ))}
        </div>
      ),
      variant?.includes("desktop") && (
        <div class="flex items-center gap-3">
          {pages.map((page) => (
            <a
              data-nav
              href={page.slug}
              class:list={"hidden md:block px-4 py-2"}
            >
              {page.name}
            </a>
          ))}
        </div>
      ),
    ]
  }
</nav>

<style>
  .selected-link {
    @apply !text-primary-base;
  }

  .selected-link [data-icon],
  [data-nav]:hover [data-icon] {
    filter: invert(32%) sepia(24%) saturate(5260%) hue-rotate(227deg)
      brightness(90%) contrast(94%);
    @apply !transition;
  }
</style>
